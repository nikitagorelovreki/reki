{
  "name": "reki-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "core:dev": "turbo run dev --filter=@reki/app-core-server",
    "app:dev": "turbo run dev --filter=@reki/app-control-panel",
    "telegram:dev": "turbo run dev --filter=@reki/app-telegram-bot",
    "auth:dev": "turbo run dev --filter=@reki/app-auth-server",
    "auth:build": "turbo run build --filter=@reki/app-auth-server",
    "auth:start": "turbo run start --filter=@reki/app-auth-server",
    "auth-domain:build": "turbo run build --filter=@reki/auth-domain",
    "auth-persistence:build": "turbo run build --filter=@reki/auth-persistence",
    "auth-service:build": "turbo run build --filter=@reki/auth-service",
    "core-domain:build": "turbo run build --filter=@reki/core-domain",
    "core-persistence:build": "turbo run build --filter=@reki/core-persistence",
    "core-service:build": "turbo run build --filter=@reki/core-service",
    "persistence-commons:build": "turbo run build --filter=@reki/persistence-commons",
    "dev:start": "./scripts/dev-start.sh",
    "dev:restart": "./scripts/dev-restart.sh",
    "dev:stop": "./scripts/dev-stop.sh",
    "service:start": "./scripts/service-start.sh",
    "start:core": "./scripts/start-core.sh",
    "start:app": "./scripts/start-app.sh",
    "start:telegram": "./scripts/start-telegram.sh",
    "start:auth": "./scripts/start-auth.sh",
    "start:db": "./scripts/start-db.sh",
    "dev:fast": "./scripts/dev-start-fast.sh",
    "start:core:fast": "./scripts/start-core-fast.sh",
    "start:telegram:fast": "./scripts/start-telegram-fast.sh",
    "logs": "./scripts/logs.sh",
    "debug": "./scripts/debug.sh",
    "health": "./scripts/health-check.sh",
    "db:reset": "./scripts/db-reset.sh",
    "db:backup": "./scripts/db-backup.sh",
    "db:restore": "./scripts/db-restore.sh",
    "test:all": "./scripts/test-all.sh",
    "lint:fix": "./scripts/lint-fix.sh",
    "build:all": "./scripts/build-all.sh",
    "ci:test": "./scripts/ci-test.sh"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "turbo": "^1.10.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chart.js": "^4.5.0",
    "class-transformer": "^0.5.1",
    "cookie": "^0.5.0",
    "dotenv": "^17.2.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.14.4",
    "oracledb": "^6.9.0",
    "pg": "^8.16.3",
    "pg-query-stream": "^4.10.3",
    "react-chartjs-2": "^5.3.0",
    "sqlite3": "^5.1.7",
    "tedious": "^18.6.1"
  }
}
