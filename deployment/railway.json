{
  "name": "reki-medical-platform",
  "services": [
    {
      "name": "core-server",
      "source": {
        "repo": "nikitagorelovreki/reki",
        "rootDirectory": "/packages/app-core-server"
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build",
        "startCommand": "npm start"
      },
      "deploy": {
        "numReplicas": 1,
        "sleepThreshold": "10m",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "networking": {
        "serviceDomain": "core-api"
      }
    },
    {
      "name": "auth-server", 
      "source": {
        "repo": "nikitagorelovreki/reki",
        "rootDirectory": "/packages/app-auth-server"
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build",
        "startCommand": "npm start"
      },
      "deploy": {
        "numReplicas": 1,
        "sleepThreshold": "10m",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "networking": {
        "serviceDomain": "auth-api"
      }
    },
    {
      "name": "telegram-bot",
      "source": {
        "repo": "nikitagorelovreki/reki", 
        "rootDirectory": "/packages/app-telegram-bot"
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build",
        "startCommand": "npm start"
      },
      "deploy": {
        "numReplicas": 1,
        "sleepThreshold": "0",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    },
    {
      "name": "postgres",
      "source": {
        "image": "postgres:16"
      },
      "deploy": {
        "numReplicas": 1
      },
      "networking": {
        "serviceDomain": "postgres"
      }
    }
  ],
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "DATABASE_URL": "${{postgres.DATABASE_URL}}",
        "AUTH_API_URL": "https://auth-api.railway.app",
        "CORE_API_URL": "https://core-api.railway.app"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging", 
        "DATABASE_URL": "${{postgres.DATABASE_URL}}",
        "AUTH_API_URL": "https://auth-api-staging.railway.app",
        "CORE_API_URL": "https://core-api-staging.railway.app"
      }
    }
  }
}
