{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    
    // Backend specific
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    
    // Emit configuration
    "declaration": true,
    "outDir": "./dist",
    "incremental": true,
    
    // Type checking - stricter for backend
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    // Node.js specific
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Paths for backend packages
    "baseUrl": ".",
    "paths": {
          "@reki/domain": ["./packages/domain/src"],
    "@reki/domain/*": ["./packages/domain/src/*"],
    "@reki/persistence": ["./packages/persistence/src"],
    "@reki/persistence/*": ["./packages/persistence/src/*"],
    "@reki/use-cases": ["./packages/use-cases/src"],
    "@reki/use-cases/*": ["./packages/use-cases/src/*"],
    "@reki/api": ["./packages/api/src"],
    "@reki/api/*": ["./packages/api/src/*"]
    }
  },
  "include": [
    "packages/api-server/src/**/*",
    "packages/use-cases/src/**/*",
    "packages/persistence/src/**/*",
    "packages/api/src/**/*",
    "packages/domain/src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}